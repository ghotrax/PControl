@model List<UserRolViewModel>
  
@{ 

}
@{
    var roleId = ViewBag.roleId;
}
    <form method="post">
    

        <div class="card">
            <div class="card-header">
                <h3>Agreagar o remover usuario de Rol</h3>
            </div>
            <div class="card-body">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <p>
                        <label>
                            <input type="hidden" asp-for="@Model[i].UserId"  />
                            <input type="hidden" asp-for="@Model[i].UserName"  />
                            <input asp-for="@Model[i].IsSelected" type="checkbox" class="filled-in" checked="checked" />
                            <span asp-for="@Model[i].IsSelected">@Model[i].UserName</span>
                        </label>
                    </p>
                }
            </div>
            <div class="card-footer">
                <input type="submit" value="Update" class="btn btn-primary"/>
                <a asp-action="EditRole" asp-route-id="@roleId" class="btn btn-primary"  >cancelar</a>
            </div>
        </div>

    </form>