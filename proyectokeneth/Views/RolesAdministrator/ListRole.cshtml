
@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityRole>

@{
    ViewData["Title"] = "Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <h1 class="bg-info text-white">@ViewData["Title"]</h1>
<a asp-action="CreateRole" class="btn btn-secondary">Crear Rol</a>

<table class="table table-sm table-bordered table-bordered">
    <tr><th>ID</th><th>Nombre</th><th>Editar</th></tr>
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.Id</td>
            <td>@role.Name</td>
           
            <td><a class="btn btn-sm btn-primary" asp-action="EditRole" asp-controller="RolesAdministrator" asp-route-id="@role.Id">EDITAR</a></td>
          
        </tr>
    }
</table>