@model IEnumerable<proyectokeneth.Models.Entities.InstanciasPlantillas>

@{
    ViewData["Title"] = "Instancias";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<partial name="_Success" />
<partial name="_Warning" />

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Iniciada)
            </th>
            <th>
                Creada en
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @if (item.Estado == "0")
                    {
                        @Html.Raw("Pendiente")
                    }
                    else
                    {
                        @Html.Raw("Finalizada")
                    }
                </td>
                <td>
                    @if (item.Iniciada == "0")
                    {
                        @Html.Raw("No")
                    }
                    else
                    {
                        @Html.Raw("Si")
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha)
                </td>
                <td>
                    <a class="btn btn-primary" onclick="openModal(@item.IdInstanciaPlantilla, '@item.Nombre')">Acciones</a>
                  
                </td>
            </tr>
        }
    </tbody>
</table>

